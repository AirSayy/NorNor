<div class="bg-gray-100 relative">
  <img class="absolute right-12 w-[25%] top-8 block rounded-full object-cover opacity-25" src="<%= post.image %>" alt="">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row justify-between w-[70%] bg-white mt-4 border-3 border-white p-8 shadow-xl rounded-xl">
      <div class="mr-10">
        <h2 class="text-2xl font-bold font-mono text-center uppercase tracking-[.5rem] mb-4"><%= post.title %></h2>
        <img class="relative bottom-4 block w-[50%] mx-auto rounded-lg shadow-xl dark:shadow-gray-300" src="<%= post.image %>" alt="Post Image" />
        <div class="flex justify-between mx-auto w-[80%] md:w-[50%] lg:w-[30%]">
          <form action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
            <button class="btn text-red-800" type="submit">
              <i class="fa fa-heart"></i>
            </button>
            <span class=""><%= post.likes %></span>
          </form>
          <% if(post.user == user.id) { %>
          <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST">
            <button class="btn text-black" type="submit">
              <i class="fa fa-trash"></i>
            </button>
          </form>
          <% } %>
        </div>
        <div class="flex font-serif mt-5">
          <div class="mr-3">
            <span class="block text-sm font-thin">Prep-Time</span>
            <span class="block font-mono text-l font-thin mt-2"><%= post.prepTime %></span>
          </div>
          <div class="mr-3 border-l-2 border-gray-400 px-2">
            <span class="block text-sm font-thin">Cook-Time</span>
            <span class="block font-mono text-l font-thin mt-2"><%= post.cookTime %></span>
          </div>
          <div class="border-l-2 border-gray-400 px-2">
            <span class="block text-sm font-thin">Servings</span>
            <span class="block font-mono text-l font-thin mt-2"><%= post.servings %></span>
          </div>
        </div>
        <h4 class="text-center mt-4 font-semibold font-serif text-lg">Note</h4>
        <hr>
        <div class="bg-white font-mono text-center mt-4 rounded-lg shadow-md p-3">
          <%= post.descriptions %>
        </div>
      </div>
      <div class="p-4 bg-white rounded-lg mt-5">
        <h2 class="text-xl font-semibold font-serif mb-2">Ingredients:</h2>
        <ul class="font-mono list-disc list-inside">
          <% post.ingredients.forEach((ingredient) => { %>
          <li><%= ingredient %></li>
          <% }); %>
        </ul>
        <h2 class="text-xl font-semibold font-serif mt-4 mb-2">Instructions:</h2>
        <ol class="font-mono list-decimal list-inside">
          <% post.instructions.forEach((instruction) => { %>
          <li><%= instruction %></li>
          <% }); %>
        </ol>
      </div>
    </div>
    <div class="p-4 bg-transparent font-Pacifico shadow-lg mt-10">
      <ul>
        <% for(var i=0; i<comments.length; i++) { %>
        <li class="bg-white font-mono rounded-lg shadow-sm px-4 mt-4 mb-4">
          <span class="font-semibold"><%= comments[i].user %>-</span> <%= comments[i].comment %>
        </li>
        <% } %>
      </ul>
      <h2 class="text-l font-serif font-semibold mb-2">Comment</h2>
      <form action="/comment/createComment/<%= post._id%>" method="POST">
        <div class="mb-3">
          <input type="text" class="bg-gray-200 bg-opacity-40 border border-gray-500 text-black text-sm rounded-lg focus:ring-2 focus:ring-gray-400 block w-full p-2.5" id="comment" name="comment" placeholder="Add comment">
        </div>
        <button class="bg-gray-200 font-serif hover:bg-gray-300 text-black font-semibold py-2 px-4 rounded">
          Submit
        </button>
      </form>
    </div>
    <div class="flex justify-center mt-5">
      <button class=" bg-yellow-300 font-serif hover:bg-yellow-400 text-green-800 mr-2 font-semibold py-1.5 px-3 rounded-lg">
        <a href="/addRecipe" >Add Recipe</a>
      </button>
      <button class="bg-green-200 hover:bg-green-300 text-green-950 py-2 px-4 mr-2 rounded">
        <a href="/profile">Go to Profile</a>
      </button>
      <button class="bg-green-200 hover:bg-green-300 text-green-950 py-2 px-4 rounded">
        <a href="/feed">Go to Feed</a>
      </button>
    </div>
  </div>
</div>

