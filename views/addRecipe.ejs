<%- include('partials/header') -%>

<div class="mt-5">
  <h2 class="text-2xl text-center font-bold mb-4">Add a Recipe</h2>
  <form action="/post/createPost" enctype="multipart/form-data" method="POST">
    <div class="mb-4">
      <label for="title" class="block text-gray-700 font-bold mb-2">Title</label>
      <input type="text" class="border border-gray-300 rounded-md py-2 px-3 w-full" id="title" name="title" placeholder="Enter the recipe title">
    </div>
    <div class="mb-4">
      <label for="prepTime" class="block text-gray-700 font-bold mb-2">Prep Time</label>
      <input type="text" class="border border-gray-300 rounded-md py-2 px-3 w-full" id="prepTime" name="prepTime" placeholder="Enter the preparation time">
    </div>
    <div class="mb-4">
      <label for="cookTime" class="block text-gray-700 font-bold mb-2">Cook Time</label>
      <input type="text" class="border border-gray-300 rounded-md py-2 px-3 w-full" id="cookTime" name="cookTime" placeholder="Enter the cooking time">
    </div>
    <div class="mb-4">
      <label for="servings" class="block text-gray-700 font-bold mb-2">Servings</label>
      <input type="text" class="border border-gray-300 rounded-md py-2 px-3 w-full" id="servings" name="servings" placeholder="Enter the number of servings">
    </div>
    <div class="mb-4">
      <label for="ingredients" class="block text-gray-700 font-bold mb-2">Ingredients</label>
      <textarea name="ingredients" id="ingredients" rows="5" class="border border-gray-300 rounded-md py-2 px-3 w-full resize-none" required placeholder="Enter the list of ingredients"></textarea>
    </div>
    <div class="mb-4">
      <label for="instructions" class="block text-gray-700 font-bold mb-2">Instructions</label>
      <textarea name="instructions" id="instructions" rows="5" class="border border-gray-300 rounded-md py-2 px-3 w-full resize-none" required placeholder="Enter the cooking instructions"></textarea>
    </div>
    <div class="mb-4">
      <label for="descriptions" class="block text-gray-700 font-bold mb-2">Description</label>
      <textarea name="descriptions" id="descriptions" rows="5" class="border border-gray-300 rounded-md py-2 px-3 w-full resize-none" required placeholder="Enter a description of the recipe"></textarea>
    </div>
    <div class="mb-4">
      <label for="imageUpload" class="block text-gray-700 font-bold mb-2">Image</label>
      <input type="file" class="border border-gray-300 rounded-md py-2 px-3 w-full" id="imageUpload" name="file">
    </div>
    <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Create Recipe</button>
  </form>
</div>


<%- include('partials/footer') -%>
