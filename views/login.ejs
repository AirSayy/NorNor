<%- include('partials/header') -%>


  <main class="image">
    <section>
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      
        
      <div class="login mt-40 m-auto w-full max-w-sm p-4 bg-gradient-to-br from-yellow-400 via-green-400 to-red-400 sm:p-6 md:p-8">
        <form class="space-y-6" action="/login" method="POST">
          <h5 class="text-xl font-medium text-green-900">Sign in to our platform</h5>
          
          <div>
            <label for="email" class="block mb-2 text-sm font-medium text-black">Your email</label>
            <input 
              type="email"
              name="email"
              id="email" 
              class="bg-white bg-opacity-40 border border-white text-white text-sm rounded-lg focus:ring-2 focus:ring-white block w-full p-2.5" placeholder="Type in your email" required>
          </div>
          
          <div>
            <label for="password" class="block mb-2 text-sm font-medium text-black">Your password</label>
            <input 
              type="password" 
              name="password" 
              id="password" 
              placeholder="••••••••" 
              class="bg-white bg-opacity-40 border border-white text-white text-sm rounded-lg focus:ring-2 focus:ring-white block w-full p-2.5" required>
          </div>
          
          <button type="submit" class="w-full text-white bg-green-700 hover:bg-green-600 focus:ring-2 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-cente">Login</button>
          
          <div class="text-sm font-medium text-white">
            No Account? <a href="/signup" class="text-yellow-300 hover:underline">Sign up</a>
          </div>
        </form>
      </div>
      
      
      
    </section>
  

  </main>
<%- include('partials/footer') -%>





  